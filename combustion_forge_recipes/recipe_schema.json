{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Combustion Forge Recipe",
    "description": "A recipe for the combustion forge multiblock",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "enum": [ "combustion_forge_shaped", "combustion_forge_shapeless"]
        },
        "result": {
            "type": "object",
            "$ref": "#/$defs/item_with_count_single_id"
        }
    },
    "required": [ "type", "result" ],
    "allOf": [
        {
            "if": {
                "properties": {
                    "type": {"const": "combustion_forge_shaped"}
                }
            },
            "then": {
                "properties": {
                    "pattern": {
                        "type": "array",
                        "minItems": 1,
                        "maxItems": 3,
                        "items": {
                            "type": "string",
                            "minLength": 1,
                            "maxLength": 3
                        }
                    },
                    "key": {
                        "type": "object",
                        "patternProperties": {
                            "^\\S$": {
                                "$ref": "#/$defs/item_or_item_list_without_count"
                            }
                        },
                        "additionalProperties": false
                    }
                },
                "required": [ "pattern", "key" ]
            }
        },
        {
            "if": {
                "properties": {
                    "type": {"const": "combustion_forge_shapeless"}
                }
            },
            "then": {
                "properties": {
                    "ingredients": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "$ref": "#/$defs/item_or_item_list_with_count"
                        }
                    }
                },
                "required": [ "ingredients" ]
            }
        }
    ],

    "$defs": {
        "item_id": {
            "type": "string",
            "pattern": "^[-.0-9A-Z_a-z]+:[-./0-9A-Z_a-z]+$"
        },
        "item_id_or_item_id_list": {
            "anyOf": [
                {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                        "$ref": "#/$defs/item_id"
                    }
                },
                {
                    "$ref": "#/$defs/item_id"
                }
            ]
        },
        "item_without_count": {
            "type": "object",
            "properties": {
                "item": {
                    "$ref": "#/$defs/item_id_or_item_id_list"
                },
                "nbt": {
                    "type": "string"
                }
            },
            "required": [ "item" ]
        },
        "item_or_item_list_without_count": {
            "anyOf": [
                {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                        "$ref": "#/$defs/item_without_count"
                    }
                },
                {
                    "$ref": "#/$defs/item_without_count"
                }
            ]
        },
        "item_with_count": {
            "type": "object",
            "properties": {
                "item": {
                    "$ref": "#/$defs/item_id_or_item_id_list"
                },
                "count": {
                    "type": "integer",
                    "minimum": 1
                },
                "nbt": {
                    "type": "string"
                }
            },
            "required": [ "item" ]
        },
        "item_or_item_list_with_count": {
            "anyOf": [
                {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                        "$ref": "#/$defs/item_with_count"
                    }
                },
                {
                    "$ref": "#/$defs/item_with_count"
                }
            ]
        },
        "item_with_count_single_id": {
            "type": "object",
            "properties": {
                "item": {
                    "$ref": "#/$defs/item_id"
                },
                "count": {
                    "type": "integer",
                    "minimum": 1
                },
                "nbt": {
                    "type": "string"
                }
            },
            "required": [ "item" ]
        }
    }
}